<nav class="navbar navbar-inverse" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="#">Linguagens</a>
  </div>

  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to 'Novo', new_language_path %></li>
    </ul>
  </div>
</nav>

<table class="table table-hover table-bordered">
	<thead>
		<tr>
			<th>Nome</th>
			<th>Ações</th>
		</tr>
	</thead>
	<tbody>
		<% @languages.each do |language| %>
		<tr>
			<td><%= language.name %></td>
			<td>
				<%= link_to edit_language_path(language.id), title: 'Editar' do  %>
          			<span class="glyphicon glyphicon-pencil"></span>
        		<% end %>
        		<%= link_to show_language_path(language.id), title: 'Exibir' do  %>
	          		<span class="glyphicon glyphicon-eye-open"></span>
    		    <% end %>
        		<%= link_to destroy_language_path(language.id), title: 'Excluir' do %>
          			<span class="glyphicon glyphicon-trash"></span>
        		<% end %>
      		</td>
    	</tr>
    	<% end %>
  	</tbody>
</table>